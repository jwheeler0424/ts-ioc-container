{
  "name": "ts-ioc-container",
  "version": "0.1.0",
  "description": "A dependency injection IoC container for TypeScript",
  "main": "./src/index.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "dev": "nodemon",
    "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json)\"",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx",
    "test": "jest --passWithNoTests --updateSnapshot --coverage",
    "test:watch": "jest --passWithNoTests --updateSnapshot --coverage --watch"
  },
  "keywords": [],
  "author": "",
  "license": "GPLv3",
  "devDependencies": {
    "@jest/globals": "latest",
    "@total-typescript/ts-reset": "latest",
    "@tsconfig/node22": "latest",
    "@types/jest": "latest",
    "@types/module-alias": "latest",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "jest": "latest",
    "jest-environment-jsdom": "latest",
    "nodemon": "latest",
    "prettier": "latest",
    "ts-jest": "latest",
    "ts-node": "latest",
    "tsc-alias": "latest",
    "tsconfig-paths": "latest",
    "typescript": "latest"
  }
}
